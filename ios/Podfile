# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'NativeAudioPlayer' do
  config = use_native_modules!(['npx', 'rnef', 'config', '-p', 'ios'])

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  target 'NativeAudioPlayerReact' do
    inherit! :complete
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    # Fix for SwiftAudioEx module compilation issues
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Apply fixes to all targets (recommended for stability)
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
        
        # Disable user script sandboxing to prevent build issues (temporary fix)
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
        
        # Special handling for ReactBrownfield to ensure Swift interfaces are generated
        if target.name.include?("ReactBrownfield")
          config.build_settings['SWIFT_EMIT_MODULE_INTERFACE'] = 'YES'
          config.build_settings['SWIFT_MODULE_INTERFACES_ONLY'] = 'NO'
        else
          # Disable for other targets to prevent compilation issues
          config.build_settings['SWIFT_EMIT_MODULE_INTERFACE'] = 'NO'
          config.build_settings['SWIFT_MODULE_INTERFACES_ONLY'] = 'NO'
        end
        
        #Alternative: Apply only to problematic targets (more targeted but riskier)
        #if target.name.include?("SwiftAudioEx") || target.name.include?("react-native-track-player")
        #  config.build_settings['SWIFT_EMIT_MODULE_INTERFACE'] = 'NO'
        #  config.build_settings['SWIFT_MODULE_INTERFACES_ONLY'] = 'NO'
        #end
      end
    end
  end
end
